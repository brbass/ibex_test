<input type='manufactured'
       print='true'
       number_of_threads='2'>
  <energy_discretization>
    <number_of_groups>1</number_of_groups>
  </energy_discretization>
  <angular_discretization>
    <dimension>2</dimension>
    <number_of_moments>2</number_of_moments>
    <rule>2</rule>
  </angular_discretization>
  <manufactured>
    <solution type='sinusoidal'>
      <values>
        1. 0 0 
      </values>
      <relative_amplitude>0.5</relative_amplitude>
    <frequency>0.125 0.125</frequency>
    </solution>
    <cross_sections type='sinusoidal'>
      <sigma_t>
        1.0
      </sigma_t>
      <sigma_s>
        0.5 0
      </sigma_s>
      <relative_amplitude>0.2</relative_amplitude>
      <frequency>0.01 0.1</frequency>
    </cross_sections>
    <boundary_surfaces>
      <positions>
        -2 2
        -2 2
      </positions>
    </boundary_surfaces>
    <error integration_ordinates='8'
           norm='integral'>
      <dimensional_cells>10 10</dimensional_cells>
    </error>
    <error integration_ordinates='8'
           norm='l1'>
      <dimensional_cells>10 10</dimensional_cells>
    </error>

  </manufactured>
  <spatial_discretization input_format='points'
                          points_file='square_4.0_8.xml'>
    <options weighting='basis'
             external_integral_calculation='true'
             output_material='false'
             output_integrals='false'>
      <integration_ordinates>8</integration_ordinates>
      <dimensional_cells>16 16</dimensional_cells>
    </options>
    <dimensional_points>16 16</dimensional_points>
    <weight_functions>
      <radius_calculation method='coverage'>
        <number_of_neighbors>16</number_of_neighbors>
        <radius_multiplier>1.0</radius_multiplier>
      </radius_calculation>
      <meshless_function type='linear_mls'
                         function='wendland31'/>
    </weight_functions>
  </spatial_discretization>
  <problem discretization='strong'/>
  <transport solver='amesos_parallel'
             level_of_fill='1.0'
             drop_tolerance='1e-12'
             tolerance='1e-12'
             kspace='40'
             max_restarts='40'
             max_iterations='1000'/>
  <solver type='krylov'
          max_iterations='50'
          kspace='20'
          solver_print='1'
          tolerance='1e-10'>
    <value type='centers'/>
    <value type='integral'
           adaptive_quadrature='false'
           integration_ordinates='8'>
      <limits>
        -2 2
        -2 2
      </limits>
      <dimensional_cells>10 10</dimensional_cells>
    </value>
  </solver>
</input>
